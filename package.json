{
  "name": "ytmdesktop-remote-server",
  "version": "2.2.2",
  "description": "Modern web-based remote control for YouTube Music Desktop with AuthToken persistence",
  "main": "dist/server/index.js",
  "type": "module",
  "imports": {
    "supertest": "./tests/support/supertest/index.js"
  },
  "scripts": {
    "dev": "bun run --watch src/server/index.ts",
    "build": "bun run build:client && bun run build:server",
    "build:server": "bun build src/server/index.ts --outdir dist/server --target bun",
    "build:client": "bun build src/client/main.ts --outdir public/dist --target browser --minify",
    "start": "bun run dist/server/index.js",
    "type-check": "tsc --noEmit",
    "test": "bun test",
    "debug": "bun run debug-cli.ts"
  },
  "keywords": [
    "ytmdesktop",
    "youtube-music",
    "remote-control",
    "websocket",
    "music-player",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.6.1",
    "socket.io-client": "^4.6.1",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "bun-types": "^1.1.38",
    "happy-dom": "file:tests/vendor/happy-dom",
    "@testing-library/dom": "file:tests/vendor/testing-library-dom",
    "supertest": "file:tests/support/supertest",
    "typescript": "^5.7.2"
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}
